<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPlaceMtDoom"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/mount_doom"
                android:checked="true"
                android:shadowColor="#FFFFFF"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="2.0"
                android:text="Scream at Mt Doom in Mordor"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnPlaceBlackHole"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/black_hole"
                android:checked="true"
                android:text="Scream into a Black Hole"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>